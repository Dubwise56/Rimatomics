<?xml version="1.0" encoding="utf-8" ?>
<Defs>


	<ThingDef ParentName="UnfinishedBase">
		<defName>UnfinishedRimatomics</defName>
		<label>unfinished Rimatomics item</label>
		<description>An unfinished Rimatomics item.</description>
		<statBases>
			<Flammability>0.5</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Item/Unfinished/UnfinishedPack</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<stuffCategories Inherit="false" />
	</ThingDef>

  <ThingDef ParentName="RimatomicResourceBase" Name="UpgradePart" Abstract="True" Class="Rimatomics.RimatomicsThingDef">
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <fillPercent>0.1</fillPercent>
    <drawGUIOverlay>true</drawGUIOverlay>
    <stackLimit>25</stackLimit>
    <statBases>
      <Flammability>10</Flammability>
      <MarketValue>40</MarketValue>
      <Mass>3</Mass>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>RimatomicsProduct</li>
    </thingCategories>
    <intricate>true</intricate>
    <recipeMaker>
      <productCount>1</productCount>
      <workAmount>11000</workAmount>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <unfinishedThingDef>UnfinishedRimatomics</unfinishedThingDef>
    </recipeMaker>
  </ThingDef>


