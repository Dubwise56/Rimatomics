<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>SmeltBlades</defName>
    <label>smelt turbine blades</label>
    <description>Use heat and strong electromagnets to break turbine blades into useful resources.</description>
    <jobString>Smelting turbine blade.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>turbineBlade</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>turbineBlade</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Steel>1</Steel>
    </products>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef Name="MakeFuelRodsBase" Abstract="True">
    <label>Make Uranium Fuel rods</label>
    <description>Construct Uranium Fuel rods.</description>
    <jobString>Making nuclear fuel rods.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ConstructMetal</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedRimatomics</unfinishedThingDef>
    <workAmount>8000</workAmount>
    <workSkill>Crafting</workSkill>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <recipeUsers>
      <li>TableRimatomicsMachining</li>
    </recipeUsers>
  </RecipeDef>

  <RecipeDef ParentName="MakeFuelRodsBase">
    <products>
      <FuelRods>1</FuelRods>
    </products>
    <defName>MakeFuelRods</defName>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>UraniumPellets</li>
          </thingDefs>
        </filter>
        <count>100</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>UraniumPellets</li>
        <li>Steel</li>
        <li>Silver</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef ParentName="MakeFuelRodsBase">
    <defName>MakeMoxFuelRods</defName>
    <label>Make MOX fuel rods</label>
    <description>Construct MOX fuel rods.</description>
    <jobString>Making MOX fuel rods.</jobString>
    <products>
      <FuelRodsMOX>1</FuelRodsMOX>
    </products>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Plutonium</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>DepletedUraniumPellets</li>
          </thingDefs>
        </filter>
        <count>99</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Silver</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Plutonium</li>
        <li>DepletedUraniumPellets</li>
        <li>Steel</li>
        <li>Silver</li>
      </thingDefs>
    </fixedIngredientFilter>
  </RecipeDef>

  <RecipeDef>
    <defName>DismantleWarhead</defName>
    <label>Dismantle warhead</label>
    <description>Salvaging useful materials from a warhead</description>
    <jobString>Dismantling warhead.</jobString>
    <workAmount>2500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ConstructMetal</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>FissionWarhead</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>FissionWarhead</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plutonium>120</Plutonium>
      <Steel>100</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </products>
    <recipeUsers>
      <li>TableRimatomicsMachining</li>
    </recipeUsers>
  </RecipeDef>

</Defs>